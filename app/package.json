{
  "name": "simple-ifta-app",
  "version": "1.0.0",
  "description": "App for Simple IFTA",
  "scripts": {
    "test": "mocha shared/tests/*.spec.js --compilers js:babel-register",
    "test:server": "cross-env NODE_ENV=test PORT=8080 MONGO_URL=mongodb://db:27017/simple-ifta-test mocha --compilers js:babel-register --recursive server/tests/**/*.spec.js",
    "start": "cross-env NODE_ENV=development node index.js",
    "start:prod": "cross-env NODE_ENV=production node index.js",
    "bs": "npm run clean && npm run build && npm run start:prod",
    "minify": "cleancss -o static/css/app.min.css static/dist/app.css",
    "build": "cross-env NODE_ENV=production webpack --config webpack.config.prod.js && npm run minify",
    "clean": "rimraf static/dist",
    "slate": "rimraf node_modules && npm install",
    "lint": "eslint client server shared"
  },
  "pre-commit": [
    "lint",
    "test",
    "test:server"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vivanov1410/simple-ifta-app.git"
  },
  "bugs": {
    "url": "https://github.com/vivanov1410/simple-ifta-app/issues"
  },
  "license": "MIT",
  "dependencies": {
    "babel-core": "^6.7.4",
    "body-parser": "^1.15.0",
    "classnames": "^2.2.3",
    "cuid": "^1.3.8",
    "express": "^4.13.4",
    "history": "^2.0.1",
    "http-status": "^0.2.1",
    "is_js": "^0.8.0",
    "isomorphic-fetch": "^2.2.1",
    "moment": "^2.12.0",
    "mongoose": "^4.4.10",
    "pluralize": "^1.2.1",
    "react": "^0.14.7",
    "react-dom": "^0.14.7",
    "react-redux": "^4.4.1",
    "react-router": "^2.0.1",
    "redux": "^3.3.1",
    "redux-thunk": "^2.0.1",
    "sanitize-html": "^1.11.3"
  },
  "devDependencies": {
    "babel-eslint": "^6.0.0",
    "babel-loader": "^6.2.4",
    "babel-plugin-react-transform": "^2.0.2",
    "babel-polyfill": "^6.7.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-1": "^6.5.0",
    "babel-register": "^6.7.2",
    "bootstrap": "^4.0.0-alpha.2",
    "bootstrap-loader": "^1.0.10",
    "chai": "^3.5.0",
    "clean-css": "^3.4.10",
    "cross-env": "^1.0.7",
    "css-loader": "^0.23.1",
    "css-modules-require-hook": "^4.0.0",
    "deep-freeze": "0.0.1",
    "eslint": "^2.5.1",
    "eslint-config-airbnb": "^6.2.0",
    "eslint-plugin-react": "^4.2.3",
    "expect": "^1.16.0",
    "expect-jsx": "^2.4.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.8.5",
    "mocha": "^2.4.5",
    "node-sass": "^3.4.2",
    "postcss-loader": "^0.8.2",
    "pre-commit": "^1.1.2",
    "react-addons-test-utils": "^0.14.7",
    "react-transform-hmr": "^1.0.4",
    "redux-devtools": "^3.1.1",
    "redux-devtools-dock-monitor": "^1.1.0",
    "redux-devtools-log-monitor": "^1.0.5",
    "resolve-url-loader": "^1.4.3",
    "rimraf": "^2.5.2",
    "sass-loader": "^3.2.0",
